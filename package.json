{
	"name": "minecraft-assets-helper",
	"displayName": "minecraft-assets-helper",
	"description": "",
	"version": "1.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Linters",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
        "languages": [{
            "id": "json",
            "extensions": [
                "mcmeta"
            ]
		}],
		"jsonValidation": [
            {
                "fileMatch": "pack.mcmeta",
                "url": "./src/linters/pack.mcmeta.json"
            },
            {
                "fileMatch": "assets/**/blockstates/*.json",
                "url": "./src/linters/blockstates.json"
            },
            {
                "fileMatch": "assets/**/models/block/*.json",
                "url": "./src/linters/models-block.json"
            },
            {
                "fileMatch": "assets/**/models/item/*.json",
                "url": "./src/linters/models-item.json"
            }
        ],
		"commands": []
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.19.11",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
